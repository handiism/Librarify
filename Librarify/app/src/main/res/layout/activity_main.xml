<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDF4FF"
    android:orientation="vertical"
    android:gravity="top|center"
    android:paddingVertical="25dp"
    tools:context=".activity.Main">
    <Button
        android:id="@+id/btn_add"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Add Library Member"
        android:textSize="18sp"
        android:textColorHint="@color/white"
        android:background="@drawable/ic_login_button_rounded"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Refresh Member"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColorHint="#8F8F8F"
        android:background="@drawable/ic_help_button_rounded"
        android:layout_gravity="center"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="350dp"
        android:layout_height="630dp"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>